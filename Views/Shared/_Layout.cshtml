 <!DOCTYPE html>
 <html>
 <head>
     <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>@ViewBag.Title - 浪愛有家</title>
     @RenderSection("css", false)
     <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
     <link href="~/Content/Site.css" rel="stylesheet" />
     <link href="~/Content/MyStyle.css" rel="stylesheet" />
     <script src="~/Scripts/modernizr-2.8.3.js"></script>
 </head>

 <body>
     @*navbar*@
     <nav class="navbar navbar-expand-md navbar-light sticky-top" style="font-weight:600;">
         <div class="container-lg">

             @*網站Logo*@
             <a class="navbar-brand  ml-auto mr-auto" href="@Url.Action("Index", "Home")">
                 <img src="~/photos/Logo/logo貓-金.png" style="width:33px;" />
                 <img src="~/photos/Logo/浪愛有家-金.png" style="height:53px;">
             </a>

             @*漢堡選單*@
             <button style="border: none;" class="navbar-toggler" data-toggle="collapse" data-target="#mainMenu" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                 <img src="~/photos/Logo/LOGO狗-金.png" style="width:50px;" />
             </button>

             <div class="collapse navbar-collapse" id="mainMenu">
                 <ul class="navbar-nav ml-md-5 w-100">

                     @*會員登入後的選單*@
                     @if (Session["user"] != null)
                     {
                         <li class="nav-item">
                             @Html.ActionLink("愛心領養", "Adoption_Index", "Adoption", null, new { @class = "nav-link" })
                         </li>
                         <li class="nav-item  ml-md-3">
                             @Html.ActionLink("走失協尋", "Missing_Index", "Missing", null, new { @class = "nav-link" })
                         </li>
                         <li class="nav-item  ml-md-3">
                             @Html.ActionLink("動物救援", "Rescue_Index", "Rescue", null, new { @class = "nav-link" })
                         </li>

                         <li class="nav-item dropdown ml-md-auto">
                             <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                                 刊登文章管理
                             </a>
                             <div class="dropdown-menu">
                                 <div class="dropdown-item">
                                     @Html.ActionLink("管理送養文章", "User_Adoption_Index", "Adoption", null, new { @class = "nav-link" })
                                 </div>

                                 <div class="dropdown-item">
                                     @Html.ActionLink("管理走失文章", "User_Missing_Index", "Missing", null, new { @class = "nav-link" })
                                 </div>
                                 <div class="dropdown-item">
                                     @Html.ActionLink("管理救援文章", "User_Rescue_Index", "Rescue", null, new { @class = "nav-link" })
                                 </div>
                             </div>
                         </li>

                         <li class="nav-item ml-md-3">
                             @Html.ActionLink("會員資訊", "User_Member_Index", "Member", null, new { @class = "nav-link" })
                         </li>
                         <li class="btn ml-md-4 btn Btn-Log">
                             <span onclick="location.href='@Url.Action("Logout", "Home")'">會員登出</span>
                         </li>
                     }

                     @*會員未登入的選單*@
                     else
                     {
                         <li class="nav-item">
                             @Html.ActionLink("愛心領養", "Adoption_Index", "Adoption", null, new { @class = "nav-link" })
                         </li>
                         <li class="nav-item ml-md-3">
                             @Html.ActionLink("走失協尋", "Missing_Index", "Missing", null, new { @class = "nav-link" })
                         </li>
                         <li class="nav-item ml-md-3">
                             @Html.ActionLink("動物救援", "Rescue_Index", "Rescue", null, new { @class = "nav-link" })
                         </li>
                         @*<li class="btn ml-md-auto Btn-Reg">
                <span style=" cursor:pointer" data-toggle="modal" data-target="#ShowRegisterModal" onclick="getRegisterData(event)">
                    註冊
                </span>
            </li>
            <li class="btn ml-md-3 Btn-Log">
                <span style="cursor:pointer" data-toggle="modal" data-target="#ShowLoginModal" onclick="getLoginData(event)">
                    會員登入
                </span>
            </li>*@

                         <li class="btn-group btn-group-toggle ml-md-auto" data-toggle="buttons">
                             <label class="btn Btn-Reg">
                                 <span data-toggle="modal" data-target="#ShowRegisterModal" onclick="getRegisterData(event)">
                                     註冊
                                 </span>
                             </label>
                             <label class="btn Btn-Log">
                                 <span data-toggle="modal" data-target="#ShowLoginModal" onclick="getLoginData(event)">
                                     會員登入
                                 </span>
                             </label>
                             <label class="btn Btn-Close">
                                 <span onclick="location.href='@Url.Action("Manager_Logout", "Manager")'">管理員登入</span>
                             </label>
                         </li>
                     }

                 </ul>
             </div>

         </div>
     </nav>

     @*註冊會員的Modal*@
     <div class="modal fade" id="ShowRegisterModal">
         <div class="modal-dialog modal-lg">
             <div class="modal-content" style="border:50px inherit;">

                 <div class="modal-header justify-content-center Bg-Green">
                     <img src="~/photos/Logo/logo貓-白.png" style="width:40px;" />
                     <h2 class="modal-title ml-3">註冊會員</h2>
                 </div>

                 <div class="modal-body">

                 </div>

                 <div class="modal-footer">
                     <button type="button" class="btn Btn-Close" data-dismiss="modal">關閉</button>
                 </div>

             </div>
         </div>
     </div>

     @*登入會員的Modal*@
     <div class="modal fade" id="ShowLoginModal">
         <div class="modal-dialog modal-lg">
             <div class="modal-content">

                 <div class="modal-header justify-content-center Bg-Green">
                     <img src="~/photos/Logo/logo貓-白.png" style="width:40px;" />
                     <h2 class="modal-title ml-3">登入會員</h2>
                 </div>

                 <br />

                 <div class="modal-body">

                 </div>

                 <div class="modal-footer">
                     <button type="button" class="btn Btn-Close" data-dismiss="modal">關閉</button>
                 </div>

             </div>
         </div>
     </div>

     @*讓navbar跟carousel之間留白*@
     <div class="bg-white">
         <br />
     </div>

     @*carousel*@
     <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">

         <ol class="carousel-indicators">
             <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
             <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
             <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
             <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
             <li data-target="#carouselExampleCaptions" data-slide-to="4"></li>
             <li data-target="#carouselExampleCaptions" data-slide-to="5"></li>
             <li data-target="#carouselExampleCaptions" data-slide-to="6"></li>
             <li data-target="#carouselExampleCaptions" data-slide-to="7"></li>
         </ol>

         <div class="carousel-inner">
             <div class="carousel-item active" style=" height: 350px;">
                 <img src="~/photos/Carousel/Carousel_1.jpg" class="d-block w-100" style="min-height: 350px; max-height: 450px; object-fit: cover;">
                 <div class="carousel-caption d-none d-md-block">
                     <h4>領養代替購買</h4>
                 </div>
             </div>
             <div class="carousel-item" style=" height: 350px;">
                 <img src="~/photos/Carousel/Carousel_2.jpg" class="d-block w-100" style="min-height: 350px; max-height: 450px; object-fit: cover;">
                 <div class="carousel-caption d-none d-md-block">
                     <h4>領養代替購買</h4>
                 </div>
             </div>
             <div class="carousel-item" style=" height: 350px;">
                 <img src="~/photos/Carousel/Carousel_3.jpg" class="d-block w-100" style="min-height: 350px; max-height: 450px; object-fit: cover;">
                 <div class="carousel-caption d-none d-md-block">
                     <h4>領養代替購買</h4>
                 </div>
             </div>
             <div class="carousel-item" style=" height: 350px;">
                 <img src="~/photos/Carousel/Carousel_4.jpg" class="d-block w-100" style="min-height: 350px; max-height: 450px; object-fit: cover;">
                 <div class="carousel-caption d-none d-md-block">
                     <h4>領養代替購買</h4>
                 </div>
             </div>
             <div class="carousel-item" style=" height: 350px;">
                 <img src="~/photos/Carousel/Carousel_5.jpg" class="d-block w-100" style="min-height: 350px; max-height: 450px; object-fit: cover;">
                 <div class="carousel-caption d-none d-md-block">
                     <h4>領養代替購買</h4>
                 </div>
             </div>
             <div class="carousel-item" style=" height: 350px;">
                 <img src="~/photos/Carousel/Carousel_6.jpg" class="d-block w-100" style="min-height: 350px; max-height: 450px; object-fit: cover;">
                 <div class="carousel-caption d-none d-md-block">
                     <h4>領養代替購買</h4>
                 </div>
             </div>
             <div class="carousel-item" style=" height: 350px;">
                 <img src="~/photos/Carousel/Carousel_7.jpg" class="d-block w-100" style="min-height: 350px; max-height: 450px; object-fit: cover;">
                 <div class="carousel-caption d-none d-md-block">
                     <h4>領養代替購買</h4>
                 </div>
             </div>
             <div class="carousel-item" style=" height: 350px;">
                 <img src="~/photos/Carousel/Carousel_8.jpg" class="d-block w-100" style="min-height: 350px; max-height: 450px; object-fit: cover;">
                 <div class="carousel-caption d-none d-md-block">
                     <h4>領養代替購買</h4>
                 </div>
             </div>
         </div>

         <button class="carousel-control-prev" type="button" data-target="#carouselExampleCaptions" data-slide="prev">
             <span class="carousel-control-prev-icon" aria-hidden="true"></span>
             <span class="sr-only">Previous</span>
         </button>
         <button class="carousel-control-next" type="button" data-target="#carouselExampleCaptions" data-slide="next">
             <span class="carousel-control-next-icon" aria-hidden="true"></span>
             <span class="sr-only">Next</span>
         </button>

     </div>

     @*讓carousel跟 @RenderBody() 之間留綠色根白色*@
     <div style="background-color: #569682;">
         <br />
     </div>

     <div class="bg-white">
         <br />
     </div>

     <br />

     <div class="container body-content">

         @*View的內容會顯示在這裡*@
         @RenderBody()

         <hr />

         @*網頁底部*@
         <footer>
             <p style="color: #49667C; ">
                 &copy; @DateTime.Now.Year -
                 <img src="~/photos/Logo/浪愛有家-藍.png" style="width:10%;" />
             </p>
         </footer>

     </div>

     @Scripts.Render("~/bundles/jquery")
     @Scripts.Render("~/bundles/bootstrap")
     @RenderSection("scripts", required: false)

 <script>

         //設定carousel之間時間間隔
         $('.carousel').carousel({
             interval: 4000
         })

         //開啟註冊頁面的Modal
         //function getRegisterData(evt) {
         //    $('#ShowRegisterModal .modal-body').load("/Home/_Register/");
         //}

        function getRegisterData(evt) {
            var baseUrl = '@Url.Content("~/")';  // 獲取專案的根路徑
            var RegisterUrl = baseUrl + "Home/_Register/";  // 拼接具體的路徑
            $('#ShowRegisterModal .modal-body').load(RegisterUrl);
        }

         //開啟登入頁面的Modal(相對路徑)
         //function getLoginData(evt) {
         //    $('#ShowLoginModal .modal-body').load("/Home/_Login/");
         //}


         //絕對路徑
         function getLoginData(evt) {
            var baseUrl = '@Url.Content("~/")';  // 獲取專案的根路徑
            var loginUrl = baseUrl + "Home/_Login/";  // 拼接具體的路徑
            $('#ShowLoginModal .modal-body').load(loginUrl);
         }



 </script>

 </body>
 </html>
